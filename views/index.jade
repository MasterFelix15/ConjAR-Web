                a-entity(geometry='primitive: cylinder; height: 0.15; radius: 0.01', material='color: black', position='0.2 0.2 -0.125', rotation='90 0 0')
                a-entity(geometry='primitive: cylinder; height: 0.15; radius: 0.01', material='color: black', position='-0.2 0.2 0.125', rotation='90 0 0')
                a-entity(geometry='primitive: cylinder; height: 0.15; radius: 0.01', material='color: black', position='-0.2 0.2 -0.125', rotation='90 0 0')
                a-entity(geometry='primitive: cylinder; height: 0.15; radius: 0.01', material='color: black', position='0.2 -0.2 0.125', rotation='90 0 0')
